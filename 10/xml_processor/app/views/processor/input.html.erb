<%= form_tag processor_output_path, method: "get", class: 'form-inline col-2', style: 'padding: 50px;' do %>
    <%= number_field_tag 'number', nil, within: 1..7, required: true, class: 'form-control', placeholder: 'Enter a number' %>
    <%= submit_tag 'Calculate', class: "btn btn-outline-primary col-12", style: 'margin-top: 20px;' %>
<% end %>
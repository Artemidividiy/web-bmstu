<%= form_tag armstrong_output_path, method: :get, remote: true, class: 'form-inline col-2', style: 'padding: 50px;' do %>
    <%= number_field_tag 'number', nil, within: 1..7, required: true, class: 'form-control', placeholder: 'Enter a number' %>
    <%= submit_tag 'Calculate', class: "btn btn-outline-primary col-12", style: 'margin-top: 20px;' %>
<% end %>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Number</th>
        </tr>
    </thead>
    <tbody id="results"></tbody>
</table>

<script>
    let table = document.getElementById('results');
</script>